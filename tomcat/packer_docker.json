{
  "variables": {
    "ansible_host": "default",
    "ansible_connection": "docker",
    "package": "tomcat",
    "package_version": "{{env `TOMCAT_VERSION`}}",
    "username": "{{env `DOCKER_USERNAME`}}",
    "version": "{{isotime \"20060102.030405\"}}",
    "version_simple": "{{isotime \"20060102\"}}"
  },
  "builders": [
    {
      "type": "docker",
      "image": "apolloclark/openjdk:latest",
      "commit": "true",
      "run_command": [
        "-d",
        "-i",
        "-t",
        "--name",
        "{{user `ansible_host`}}",
        "{{.Image}}",
        "/bin/bash"
      ],
      "changes": [
        "ENV JAVA_HOME /usr/lib/jvm/java-11-openjdk-amd64",
        "ENV CATALINA_HOME /usr/local/tomcat",
        "ENV PATH $CATALINA_HOME/bin:$PATH",
        "ENV TOMCAT_NATIVE_LIBDIR $CATALINA_HOME/native-jni-lib",
        "ENV LD_LIBRARY_PATH ${LD_LIBRARY_PATH:+$LD_LIBRARY_PATH:}$TOMCAT_NATIVE_LIBDIR",
        "ENV TOMCAT_MAJOR 9",
        "ENV TOMCAT_VERSION 9.0.14",
        "USER tomcat",
        "CMD [\"catalina.sh\", \"run\"]",
        "WORKDIR $CATALINA_HOME",
        "EXPOSE 8080"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell-local",
      "command": "ansible-galaxy install --force -v --roles-path='./ansible/roles' --role-file='./ansible/requirements.yml'"
    },
    {
      "type": "ansible",
      "user": "root",
      "playbook_file": "./ansible/playbook_local.yml",
      "extra_arguments": [
        "--extra-vars",
        "ansible_host={{user `ansible_host`}} ansible_connection={{user `ansible_connection`}}"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{ user `username` }}/{{user `package`}}",
        "tag": "{{user `package_version`}}"
      },
      {
        "type": "docker-tag",
        "repository": "{{ user `username` }}/{{user `package`}}",
        "tag": "{{user `version_simple`}}"
      },
      {
        "type": "docker-tag",
        "repository": "{{ user `username` }}/{{user `package`}}"
      }
    ]
  ]
}
