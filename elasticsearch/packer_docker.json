{
  "variables": {
    "ansible_host": "{{env `PACKAGE`}}-{{env `IMAGE_NAME`}}",
    "ansible_connection": "docker",
    "base_image": "{{env `BASE_IMAGE`}}",
    "build_date": "{{isotime \"20060102\"}}",
    "image_name": "{{env `IMAGE_NAME`}}",
    "package": "{{env `PACKAGE`}}",
    "package_version": "{{env `PACKAGE_VERSION`}}",
    "username": "{{env `DOCKER_USERNAME`}}"
  },
  "builders": [
    {
      "type": "docker",
      "image": "{{user `base_image`}}",
      "commit": "true",
      "exec_user": "root",
      "run_command": [
        "-d",
        "-i",
        "-t",
        "--name",
        "{{user `ansible_host`}}",
        "{{.Image}}",
        "/bin/bash"
      ],
      "changes": [
        "ENV ELASTIC_CONTAINER true",
        "ENV JAVA_HOME /usr/lib/jvm/java-11-oracle",
        "ENV PATH=/usr/share/{{user `package`}}/bin:$PATH",
        "USER elasticsearch",
        "ENTRYPOINT [\"/usr/local/bin/docker-entrypoint\"]",
        "CMD [\"eswrapper\"]",
        "WORKDIR /usr/share/{{user `package`}}",
        "EXPOSE 9200 9300"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "groupadd --gid 1000 {{user `package`}}",
        "useradd -M --uid 1000 --gid 1000 --home-dir /usr/share/{{user `package`}} --shell /bin/bash {{user `package`}}",
        "mkdir -pv /usr/share/{{user `package`}}/config"
      ]
    },
    {
      "type": "ansible",
      "user": "root",
      "playbook_file": "./ansible/playbook.yml",
      "extra_arguments": [
        "--extra-vars",
        "ansible_host={{user `ansible_host`}} ansible_connection={{user `ansible_connection`}}"
      ]
    },
    {
      "type": "file",
      "source": "./files/docker-entrypoint.sh",
      "destination": "/usr/local/bin/docker-entrypoint"
    },
    {
      "type": "shell",
      "inline": [
        "chown -R root:{{user `package`}} /var/log/{{user `package`}}",
        "chmod -R 0770 /var/log/{{user `package`}}",
        "chown -R root:{{user `package`}} /var/lib/{{user `package`}}",
        "chmod -R 0770 /var/lib/{{user `package`}}",
        "chown -R {{user `package`}}:root /usr/share/{{user `package`}}",
        "chmod -R 0775 /usr/share/{{user `package`}}"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{ user `username` }}/{{user `package`}}",
        "tag": "{{user `package_version`}}-{{user `image_name`}}-{{user `build_date`}}"
      },
      {
        "type": "docker-tag",
        "repository": "{{ user `username` }}/{{user `package`}}",
        "tag": "{{user `package_version`}}-{{user `image_name`}}"
      }
    ]
  ]
}