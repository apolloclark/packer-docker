{
  "variables": {
    "ansible_connection": "docker",
    "package": "{{env `PACKAGE`}}",
    "package_version": "{{env `PACKAGE_VERSION`}}",
    "username": "{{env `DOCKER_USERNAME`}}",
    "version": "{{isotime \"20060102.030405\"}}",
    "version_simple": "{{isotime \"20060102\"}}"
  },
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu:16.04",
      "commit": "true",
      "run_command": [
        "-d",
        "-i",
        "-t",
        "{{.Image}}",
        "/bin/bash"
      ],
      "changes": [
        "ENV JAVA_HOME /usr/lib/jvm/java-11-openjdk-amd64",
        "ENTRYPOINT [\"/usr/local/bin/docker-entrypoint\"]",
        "WORKDIR /usr/bin",
        "USER root",
        "CMD [\"bash\"]"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get update",
        "apt-get upgrade -y",
        "apt-get install -y aptitude python-minimal apt-transport-https ca-certificates-java git bzip2 unzip xz-utils -yq"
      ]
    },
    {
      "type": "shell-local",
      "command": "ansible-galaxy install --force -v --roles-path='./ansible/roles' --role-file='./ansible/requirements.yml'"
    },
    {
      "type": "ansible",
      "user": "root",
      "playbook_file": "./ansible/playbook.yml"
    },
    {
      "type": "file",
      "source": "./files/docker-entrypoint",
      "destination": "/usr/local/bin/docker-entrypoint"
    },
    {
      "type": "shell",
      "inline": [
        "java -version"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{ user `username` }}/{{user `package`}}",
        "tag": "{{user `package_version`}}"
      },
      {
        "type": "docker-tag",
        "repository": "{{ user `username` }}/{{user `package`}}",
        "tag": "{{user `version_simple`}}"
      },
      {
        "type": "docker-tag",
        "repository": "{{ user `username` }}/{{user `package`}}"
      }
    ]
  ]
}
