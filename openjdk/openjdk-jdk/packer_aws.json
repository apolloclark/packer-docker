{
  "variables": {
    "vpc": "{{env `BUILD_VPC_ID`}}",
    "subnet": "{{env `BUILD_SUBNET_ID`}}",
    "aws_region": "{{env `AWS_REGION`}}",
    "ssh_keypair_name": "{{env `SSH_KEYPAIR_NAME`}}",
    "ssh_private_key_file": "{{env `SSH_PRIVATE_KEY_FILE`}}",
    "ami_name": "packer-aws-java-{{isotime \"2006-01-02_15-04-06\"}}",
    "source_ami": "{{env `BEATS_AMI_ID`}}",
    "ssh_username": "ubuntu",
    "version": "{{isotime \"20060102.030405\"}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `aws_region`}}",
      "source_ami": "{{user `source_ami`}}",
      "instance_type": "t2.micro",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_keypair_name": "{{user `ssh_keypair_name`}}",
      "ssh_private_key_file": "{{user `ssh_private_key_file`}}",
      "ami_name": "{{user `ami_name` | clean_ami_name}}",
      "tags": {
        "Name": "{{user `ami_name`}}"
      },
      "run_tags": { 
        "Name": "{{user `ami_name`}}"
      },
      "run_volume_tags": {
        "Name": "{{user `ami_name`}}"
      },
      "snapshot_tags": {
        "Name": "{{user `ami_name`}}"
      },
      "ami_description": "Java image, with Elastic monitoring agents",
      "associate_public_ip_address": "true",
      "vpc_id": "{{user `vpc`}}",
      "subnet_id": "{{user `subnet`}}"
    }
  ],
  "provisioners": [
    {
      "type": "ansible-local",
      "playbook_dir": "./ansible",
      "galaxy_file": "./ansible/requirements.yml",
      "playbook_file": "./ansible/playbook.yml"
    },
    {
      "type": "file",
      "source": "./serverspec",
      "destination": "/tmp/"
    },
    {
      "type": "shell",
      "execute_command": "echo '{{ user `ssh_password` }}' | sudo -E -S bash '{{.Path}}'",
      "inline": [
        "source /etc/profile.d/rvm.sh;",
        "cd /tmp/serverspec; rake spec"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "manifest.json",
      "strip_path": true
    }
  ]
}